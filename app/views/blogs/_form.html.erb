<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |message| %>
      <%= alert_helper(message) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.text_field :title, id: :blog_title, placeholder: "Title", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.text_area :body, id: :blog_body, placeholder: "Content", class: 'form-control', rows: 15 %>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
